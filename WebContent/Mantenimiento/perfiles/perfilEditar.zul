<?page title="Perfiles" contentType="text/html;charset=UTF-8"?>
<?script src="/webjars/bootstrap/4.0.0/js/bootstrap.min.js" ?>
<?link rel="stylesheet" href="/webjars/bootstrap/4.0.0/css/bootstrap.min.css" ?>
<zk>
	<window id="winPerfilEditar" width="450px" vflex="1"
		style="padding: 0 0 0 0;background:#122BC7;"
		apply="org.zkoss.bind.BindComposer" border="none" position="center"
		mode="overlapped"
		viewModel="@id('vm') @init('ec.edu.upse.gcf.editar.PerfilEditar')">
		<caption label="Ingrese datos" height="20px"
			sclass="p-1 text-white font-italic font-weight-bold" />
		<vlayout>
			<grid>
				<columns>
					<column align="right" hflex="min" />
					<column align="left" hflex="1" />
				</columns>
				<rows>
					<row>
						<label value="Perfil *"
							sclass="font-weight-bold col-form-label" />
						<textbox id="nombre"
							style="text-transform:uppercase"
							value="@bind(vm.perfil.nombre)" hflex="1" maxlength="150" />
					</row>					
					<row>
						<label value="DescripciÃ³n: "
							sclass="font-weight-bold col-form-label" />
						<textbox id="descripcion"
							style="text-transform:uppercase"
							value="@bind(vm.perfil.descripcion)" hflex="1" height="100px"
							multiline="true" maxlength="250" />
					</row>
				</rows>
			</grid>
			<!-- Los iconos listados con iconSclass son de: http://fontawesome.io/icons/ -->
			<div>
				<button id="grabar" label="Grabar"
					iconSclass="z-icon-save"
					zclass="btn btn-outline-primary btn btn-sm"
					onClick="@command('grabar')" />
				<button id="salir" label="Salir"
					iconSclass="z-icon-sign-out"
					zclass="btn btn-outline-danger btn btn-sm"
					onClick="@command('salir')" />
			</div>
		</vlayout>
	</window>
</zk>